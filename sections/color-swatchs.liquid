<style>
  .color-swatch {    
    box-shadow: 0px 0px 3px rgb(51 51 51 / 15%);
    width: 25px;
    height: 25px;
    display: inline-block;
    vertical-align: middle;
    margin-right: 5px;
    border-radius: 50%;
  }

  {% for block in section.blocks %}
    .color-swatch.color-{{ block.settings.heading | handle }} {
      background-color: {{ block.settings.color_code }};
    {% if block.settings.color_image %}
      background-image: url({{ block.settings.color_image | img_url:"40x40" }});
    {% endif %}}
      background-position: center;
      background-size: cover;
    }
  {% endfor %}
</style>
{% schema %}
  {
    "name": "Color Swatches",
    "settings": [],
     "blocks": [
      {
        "type": "swatch",
        "name": "Color",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Color"
          },
          {
            "type": "image_picker",
            "id": "color_image",
            "label": "Color Image"
          },
          {
            "type": "color",
            "id": "color_code",
            "label": "Color"
          }        
        ]
      }
    ],
    "presets": [
      {
        "name": "Color Swatches",
        "blocks": [
        ]
      }
    ]
  }
{% endschema %}

