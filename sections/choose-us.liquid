<div class="choose-us new_layout{{ section.settings.classname }}">
   <div class="page-width">
     <div class="page_row">
       <div class="content_wrapper">
         
          <div class="title-wrapper-with-link">
           <h2>{{ section.settings.title }}</h2>
          </div>
       </div>
       <div class="block_wrapper">


         {% for block in section.blocks %}

            <div class="block_point {% if block.settings.benefits %} has_benefits {% endif %}">

              {%- if block.settings.maintitle != blank -%}
              <div class="title-wrapper-with-link">
               <h2>{{ block.settings.maintitle }}</h2>
              </div>
              {%- endif -%}

              {%- if block.settings.image != blank -%}
              <div class="img_wrap">
                <img src="{{ block.settings.image | image_url : master}}" alt="" class="img-fluid"/>
              </div>
              {%- endif -%}
              
              <h5>{{ block.settings.title }}</h5>
              <p>{{ block.settings.content }}</p>
            </div>

         {% endfor %}

       </div>
     </div>
    </div>
</div>

{% schema %}
  {
    "name": "Choose Us",
    "settings": [
       {
            "type": "text",
            "id": "classname",
            "label": "Class Name"
          },
          {
            "type": "textarea",
            "id": "title",
            "label": "Title"
          }
    ],
    "blocks": [
      {
        "type": "info",
        "name": "Info",
        "settings": [
          {
            "type": "textarea",
            "id": "maintitle",
            "label": "Main Title"
          },
          {
            "type": "textarea",
            "id": "title",
            "label": "Title"
          },
         {
            "type": "textarea",
            "id": "content",
            "label": "Content"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "checkbox",
            "id": "benefits",
            "default": false,
            "label": "Has Benefits"
          }
        ]
      }
    ],
    "presets": [
    {
      "name": "Choose Us"
    }
    ]
  }
{% endschema %}

